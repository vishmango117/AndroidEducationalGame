<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DictionaryActivity">

    <EditText
        android:id="@+id/search_dict"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/showMeaning"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="76dp"
        android:scrollbars="vertical"
        android:text="Searching..."
        app:layout_constraintEnd_toEndOf="@+id/search_dict"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/search_dict"
        app:layout_constraintTop_toBottomOf="@+id/search_dict" />

    <Button
        android:id="@+id/find_btn"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="64dp"
        android:text="Find"
        app:layout_constraintEnd_toEndOf="@+id/showMeaning"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/showMeaning"
        app:layout_constraintTop_toBottomOf="@+id/showMeaning" />

    <TextView
        android:id="@+id/dictionary_heading"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="Search"
        app:layout_constraintBottom_toTopOf="@+id/search_dict"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/dictionary_heading2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="280dp"
        android:layout_marginBottom="1dp"
        android:text="Definition"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/showMeaning"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>