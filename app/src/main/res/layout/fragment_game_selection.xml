<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game_selection_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameSelectionFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/first_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="50dp"
        android:text="First Game"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/second_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Second Game"
        app:layout_constraintEnd_toEndOf="@+id/first_game"
        app:layout_constraintStart_toStartOf="@+id/first_game"
        app:layout_constraintTop_toBottomOf="@+id/first_game" />

    <Button
        android:id="@+id/third_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Third Game"
        app:layout_constraintEnd_toEndOf="@+id/second_game"
        app:layout_constraintStart_toStartOf="@+id/second_game"
        app:layout_constraintTop_toBottomOf="@+id/second_game" />

</androidx.constraintlayout.widget.ConstraintLayout>